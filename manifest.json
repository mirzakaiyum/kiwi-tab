{
  "manifest_version": 3,
  "name": "Kiwi Tab",
  "version": "0.0.4",
  "description": "A modern Chrome new tab replacement with enhanced features",
  "author": "Kaiyum Mirza",
  
  "chrome_url_overrides": {
    "newtab": "index.html"
  },

  "permissions": [
    "storage"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "host_permissions": [
    "https://suggestqueries.google.com/*",
    "https://api.duckduckgo.com/*",
    "https://en.wikipedia.org/*",
    "https://chatgpt.com/*",
    "https://www.perplexity.ai/*",
    "https://gemini.google.com/*",
    "https://static.cricinfo.com/*",
    "https://site.api.espn.com/*",
    "https://api.aladhan.com/*",
    "https://aladhan.api.islamic.network/*",
    "https://aladhan.api.alislam.ru/*",
    "https://images.pexels.com/*",
    "https://images.unsplash.com/*"
  ],

  "icons": {
    "16": "icon/kiwi-16.png",
    "32": "icon/kiwi-32.png",
    "48": "icon/kiwi-48.png",
    "128": "icon/kiwi-128.png"
  }
}
